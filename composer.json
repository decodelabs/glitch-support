{
    "name": "decodelabs/glitch-support",
    "description": "Shared support classes for DecodeLabs\\Glitch",
    "type": "library",
    "keywords": ["dump", "dumper", "exception", "debug"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Glitch\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.4.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
